{
  "name": "social-app",
  "version": "0.0.1",
  "scripts": {
    "build:backend": "cd ./backend && npm run build",
    "build:frontend": "cd ./frontend && npm run build",
    "build-all": "run-p build:*",
    "dev:frontend": "cd ./frontend && npm run dev",
    "dev:backend": "cd ./backend && npm run dev",
    "dev": "run-p dev:*",
    "install:frontend": "cd ./frontend && npm i --only=dev",
    "install:backend": "cd ./backend && npm i --only=dev",
    "install-all": "run-p install:*",
    "build": "run-s install-all build-all",
    "start": "cd ./backend && npm run start"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  },
  "engines": {
    "node": "16.17.0",
    "npm": "8.15.0"
  }
}
